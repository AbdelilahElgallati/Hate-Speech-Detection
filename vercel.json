{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.10",
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "HF_TOKEN": "@hf_token",
        "HF_REPO_ID": "@hf_repo_id"
    },
    "ignoreCommand": "git diff --quiet $VERCEL_GIT_COMMIT_REF $VERCEL_GIT_COMMIT_SHA ./hate-speech-and-offensive-language-dataset.csv"
} 